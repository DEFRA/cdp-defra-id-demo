{% extends 'layouts/page.njk' %}

{% block content %}
  {{ appHeading({
    text: heading,
    caption: "Core delivery platform Node.js Frontend Template."
  }) }}

  {% call appPageBody() %}
  {% if authedUser.displayName %}
    <p>
      Welcome, <strong>{{ authedUser.displayName }}</strong> - <a href="{{ serviceUrl }}/logout">Logout</a>
    </p>
    <p>
      Here are your details:
      <ul>
      {% for k, v in authedUser %}
        <li><code><strong>{{ k }}</strong></code><p><code>{{ v }}</code></p></li>
      {% endfor %}
      </ul>
    </p>
  {% else %}
    <p>
      Welcome, guest!
    </p>
    <p>
      You can login <a href="{{ serviceUrl }}/login">here</a>
    </p>
  {% endif %}
  {% endcall %}

{% endblock %}
